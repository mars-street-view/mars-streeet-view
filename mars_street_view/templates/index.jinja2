<!DOCTYPE html>
<html>
  <!-- HEAD -->
  <head>
    <title>
      Mars Street View
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="../static/normalize.css">
    <link rel="stylesheet" type="text/css" href="../static/skeleton.css">
    <link rel="stylesheet" type="text/css" href="../static/base.css">
    <link rel="stylesheet" type="text/css" href="../static/map.css">
    <link rel="stylesheet" type="text/css" href="../static/cam.css">


    {% raw %}
    <script id="cam-template" type="text/x-handlebars-template">
        <div class="camera-button three columns">
          <img src="{{0}}" id="{{short_name}}">
          <h5>{{name}}<h5>
        </div>
    </script>

    <script id="cam-details" type="text/x-handlebars-template">
        <div class="camera-button three columns">
          <h5>Rover: {{rover}}<h5>
          <h5>Sol: {{label_sol}}<h5>
          <!-- <h5>Earth Date: {{earth_date}}<h5> -->
        </div>
    </script>
    {% endraw %}

  </head>
  <!-- BODY -->
  <body>

    <!-- HEADER / NAV -->
    <header class="top_header">
      <div>MARS STREET VIEW</div>
    </header>
    <section class='header'>
      <div class="logo">
        <img id="logo" src="../static/logo.png">
        <h1 id="title_header">MARS STREET VIEW</h1>
      </div>
      <nav class="nav">
        <ul>
          <li class="nav_item"><a href="">HOME</a></li>
          <li class="nav_item"><a href="">ROVER</a></li>
          <li class="nav_item"><a href="">HISTORY</a></li>
        </ul>
      </nav>
      <div class="space"></div>
    </section>

    <!-- HOME CONTAINER -->
    <article class="container">
      <section class="main-menu row" id="menu-home">

        <!-- MAR GLOBE -->
  			<section class="planet-menu six columns">
  				<figure class="mars">
  					<span class="caps"></span>
  					<span id="opportunity" class="map-loc"></span>
  					<span id="curiosity" class="map-loc"></span>
  					<span id="spirit" class="map-loc"></span>
  				</figure>
  			</section>

        <!-- ALL ROVER INFO -->
  			<section class="info six columns">
  				<article class="rover-info hidden" rover="Opportunity" rover-lower="opportunity">
  					<h1>Opportunity</h1>
  					<p>
